<form {{action 'search' query location on="submit"}}>
  <box xs="vertical" sm="horizontal" class="p-2">
    <vbox sm="fill" class="p-2">
      <label class="d-block" for="search_query">Zoekopdracht</label>
      <p class="note mt-1">Functie, trefwoorden of bedrijf</p>
      {{input
          value=query
          type="text"
          id="search_query"
          class="form-control input-block mt-2"
          required=true
          placeholder="Software engineer"}}
    </vbox>

    <vbox sm="fill" class="p-2">
      <label class="d-block" for="search_location">Locatie</label>
      <p class="note mt-1">Plaats, provincie of postcode</p>
      {{input
          value=location
          type="text"
          id="search_location"
          class="form-control input-block mt-2"
          required=true
          placeholder="Amsterdam"
          key-up=(action cancelUseCurrentLocation)}}

      {{#if useCurrentLocation.isIdle}}
        <button type="button" class="btn-link text-left f6 mt-2" onclick={{perform useCurrentLocation}}>
          {{fa-icon "location-arrow" class="mr-2"}}Gebruik uw huidige locatie
        </button>
      {{else}}
        <div class="text-gray-light f6 mt-2">
          {{fa-icon "spinner" spin=true class="mr-2"}}Huidige locatie ophalenâ€¦
        </div>
      {{/if}}
    </vbox>

    <vbox fit xs="align-self=start" sm="align-self=end" class="p-2">
      <button type="submit" class="btn btn-purple">Vacatures zoeken</button>
      <div class="f6 mt-2" xs="hidden" sm="visible">&nbsp;</div>
    </vbox>
  </box>
</form>

