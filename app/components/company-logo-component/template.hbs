{{#if spinnerVisible}}
  <centered class="Logo border">
    {{fa-icon "spinner" spin=true}}
  </centered>
{{/if}}

{{#if logoLoading}}
  <img class="Logo d-none" alt={{company}} width="40" src={{logoSrc}} onload={{action 'onLoad'}} onerror={{cancel-all loadLogo}} />
{{/if}}

{{#if logoLoaded}}
  <img class="Logo d-block" alt={{company}} width="40" src={{logoSrc}} />
{{/if}}

{{#if placeholderVisible}}
  <centered class="Logo border bg-white">
    {{fa-icon "building-o"}}
  </centered>
{{/if}}
