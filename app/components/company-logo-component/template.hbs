{{#if spinnerVisible}}
  <centered class="border rounded-1" style="width: 42px; height: 42px;">
    {{fa-icon "spinner" spin=true}}
  </centered>
{{/if}}

{{#if logoLoading}}
  <img class="rounded-1 d-none" alt={{company}} width="42" src={{logoSrc}} onload={{action 'onLoad'}} onerror={{cancel-all loadLogo}} />
{{/if}}

{{#if logoLoaded}}
  <img class="rounded-1 d-block" alt={{company}} width="42" src={{logoSrc}} />
{{/if}}

{{#if placeholderVisible}}
  <centered class="border rounded-1 bg-white" style="width: 42px; height: 42px;">
    {{fa-icon "building-o"}}
  </centered>
{{/if}}
